<style>
    footer.index-footer {
        width: 100%;
        height: 15vw;
        position: fixed;
        left: 0;
        right: 0;
        margin: 0 auto;
        bottom: 0;
        z-index: 2;
        background: #fff;
        box-shadow: 0px -1px 5px #ccc;
    }

    footer.index-footer ul {
        display: flex;
        height: 100%;
    }

    footer.index-footer ul li {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        display: -webkit-flex;
        color: #d39e00;
        text-decoration: none;
    }

    footer.index-footer ul li.active {
        /* color: #00b2d3; */
        color: #007bff;
    }

    footer.index-footer ul li span:first-child {
        flex: 5;
        vertical-align: bottom;
        font-size: 5vw;
    }

    footer.index-footer ul li span:first-child::before {
        vertical-align: bottom;
    }

    footer.index-footer ul li span:last-child {
        flex: 3;
        font-size: 3.5vw;
    }
</style>
<footer class="index-footer">
    <ul id="index-footer-ul">
        <li a-link="/" class="<%=active==0?'active': ''%>">
            <span class="dripicons-web"></span>
            <span>资讯</span>

        </li>
        <li a-link="/friend" class="<%=active==1?'active': ''%>">
            <span class="dripicons-graph-pie"></span>
            <span>萌友圈</span>
        </li>
        <li class="<%=active==2?'active': ''%>">
            <span class="dripicons-monitor"></span>
            <span>电视台</span>
        </li>
        <li class="<%=active==3?'active': ''%>">
            <span class="dripicons-cart"></span>
            <span>商城</span>
        </li>
        <li class="<%=active==4?'active': ''%>">
            <span class="dripicons-flag"></span>
            <span>战绩</span>
        </li>
    </ul>
</footer>
<script>
    $(function(){
        $("#index-footer-ul").on('click', 'li', function() {
           if(location.pathname === $(this).attr('a-link')){
               return;
           } else {
               location.href= $(this).attr('a-link')
           }
        })
    })
</script>
</body>

</html>